<% page ||= site_page %>
<% if page %>
<% content_for :site_title, "#{site_title} - #{page.title}" %>
<h1 class="page-title">
  <%= page.title %>
  <% if user_signed_in? %>
    <% page_link = page.id.nil? ? new_page_path : edit_page_path(page) %>
    <%= link_to page_link, class: 'btn btn-sm btn-outline-primary pull-right' do %>
      <%= fa_icon(:edit, text: t(:edit_type, type: t(:page))) %>
    <% end %>
  <% end %>
  <hr/>
</h1>

<article class="page-content">
  <%= render_markdown(page.content) %>
</article>
<% end %>
