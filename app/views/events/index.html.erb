<%= render 'pages/page' %>

<%= link_to 'Add New Event', new_event_path, class: 'button button-outline' %>

<% if @active_events.empty? && @inactive_events.empty? %>
  <hr/>
  No Events Registered.
<% else %>
  <% unless @active_events.empty? %>
    <h2>Active Events</h2>
    <% @active_events.each do |event| %>
      <hr/>
      <h4><%= link_to event.link_to_text, event %></h4>
    <% end %>
  <% end %>
<br/>
  <% unless @inactive_events.empty? %>
    <h2>Inactive Events</h2>
    <% @inactive_events.each do |event| %>
      <hr/>
      <h4 class="inactive"><%= link_to event.link_to_text, event %></h4>
    <% end %>
  <% end %>
<% end %>
