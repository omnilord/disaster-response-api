<p id="notice"><%= notice %></p>

<h1>Drafts</h1>

<table class="container">
  <thead>
    <tr>
      <th>Draft Type</th>
      <th>Draft</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drafts.each do |draft| %>
      <tr>
        <td><%= draft.draftable.class.name %></td>
        <td><%= link_to draft.draftable.link_to_text, draft.draftable %></td>
        <td><%= draft.user.real_name %></td>
        <td><%= link_to 'Show', draft %></td>
        <td><%= link_to 'Edit', edit_draft_path(draft) %></td>
        <td><%= link_to 'Destroy', draft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Draft', new_draft_path %>
