<% flash.each do |key, value| %>
  <div class="clearfix <%= flash_class(key) %>">
    <ul class="float-left">
      <%= Array(value).map { |s| "<li>#{sanitize(s)}</li>" }.join('').html_safe %>
    </ul>
    <button type="button" class="close float-right" data-dismiss="alert" aria-label="<%= t(:close) %>">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
